<% if user_signed_in? %>
  <!-- Display success messages in green -->
  <p class="text-success"><%= notice %></p>

  <!-- Set the page title -->
  <% content_for :title, "Projects" %>

  <!-- Projects container -->
  <div id="projects" class="container py-5">
    <h1 class="text-center mb-4">Your Projects</h1>

    <!-- List of projects -->
    <div class="row gy-4">
      <% @projects.each do |project| %>
        <div class="col-md-6 col-lg-4">
          <div class="card h-100 shadow-sm">
            <div class="card-header bg-dark text-white">
              Project Details
            </div>
            <div class="card-body">
              <!-- Render individual project partial -->
              <%= render project %>

              <!-- Show project button -->
              <div class="mt-3">
                <%= link_to "Show this project", project, class: "btn btn-primary w-100" %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <!-- New project button -->
    <div class="text-center mt-5">
      <%= link_to "Create New Project", new_project_path, class: "btn btn-success btn-lg" %>
    </div>
  </div>

<% else %>
  <div class="container text-center py-5">
    <h1>Welcome to My Rails App</h1>
    <p>This is my first Rails webpage...</p>
  </div>
<% end %>
