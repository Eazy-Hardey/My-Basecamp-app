<%= form_with(model: project, class: "p-4 shadow-sm bg-white rounded") do |form| %>

    <% if project.errors.any? %>
      <div class="alert alert-danger">
        <h5><%= pluralize(project.errors.count, "error") %> prohibited this project from being saved:</h5>
        <ul>
          <% project.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  
    <!-- Project Name Field -->
    <div class="mb-3">
      <%= form.label :project_name, "Project Name", class: "form-label" %>
      <%= form.text_field :project_name, class: "form-control", placeholder: "Enter project name" %>
    </div>
  
    <!-- Project Description Field -->
    <div class="mb-3">
      <%= form.label :project_discription, "Project Description", class: "form-label" %>
      <%= form.text_area :project_discription, class: "form-control", rows: 5, placeholder: "Describe the project" %>
    </div>
  
    <!-- Hidden User ID Field -->
    <%= form.hidden_field :user_id, value: current_user.id %>
  
    <!-- Submit Button -->
    <div class="d-grid">
      <%= form.submit "Save Project", class: "btn btn-primary" %>
    </div>
  
  <% end %>
  