<% content_for :title, "Editing Project" %>

<div class="container py-5">
  <h1 class="text-center mb-4">Editing Project</h1>
  
  <!-- Render the form partial for project -->
  <div class="card shadow-sm p-4 mb-4">
    <%= render "form", project: @project %>
  </div>

  <!-- Links for showing, destroying, and navigating back -->
  <div class="d-flex justify-content-center mt-4 gap-3">
    <%= link_to "Show this project", @project, class: "btn btn-info text-white" %> 
    <%= button_to "Destroy this project", @project, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
    <%= link_to "Back to projects", projects_path, class: "btn btn-dark" %>
  </div>
</div>
